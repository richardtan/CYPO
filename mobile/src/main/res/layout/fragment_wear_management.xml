<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tckr.dukcud.WearManagementActivityFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <TextView android:text="@string/manage_wear_devices"
            android:id="@+id/fwm_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cypo_header_text_size"
            android:textColor="@color/cypo_accent"
            android:layout_marginTop="16dp"
            android:maxWidth="@dimen/cypo_max_width"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/fwm_message"
            android:layout_alignStart="@+id/fwm_message"
            />

        <TextView android:text="@string/manage_wear_devices_msg"
            android:id="@+id/fwm_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cypo_normal_text_size"
            android:textColor="@color/cypo_black"
            android:layout_below="@+id/fwm_header"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:maxWidth="@dimen/cypo_max_width"
            android:layout_centerHorizontal="true"
            />

        <RadioGroup
            android:id="@+id/fwm_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fwm_message"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:maxWidth="@dimen/cypo_max_width"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/fwm_message"
            android:layout_alignStart="@+id/fwm_message"
            />

        <TextView android:text="@string/manage_wear_devices_footer"
            android:id="@+id/fwm_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cypo_small_text_size"
            android:textStyle="italic"
            android:textColor="@color/cypo_black"
            android:layout_below="@+id/fwm_radio_group"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:maxWidth="@dimen/cypo_max_width"
            android:layout_centerHorizontal="true"
            />

        <TextView android:text="@string/settings"
            android:id="@+id/fwm_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cypo_header_text_size"
            android:textColor="@color/cypo_accent"
            android:layout_marginTop="32dp"
            android:maxWidth="@dimen/cypo_max_width"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fwm_footer"
            android:layout_alignLeft="@+id/fwm_message"
            android:layout_alignStart="@+id/fwm_message"
            />

        <TextView
            android:text="@string/wear_settings_desc"
            android:id="@+id/fwm_settings_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cypo_normal_text_size"
            android:textColor="@color/cypo_black"
            android:layout_below="@+id/fwm_settings"
            android:layout_marginTop="16dp"
            android:maxWidth="@dimen/cypo_max_width"
            android:layout_alignLeft="@+id/fwm_message"
            android:layout_alignStart="@+id/fwm_message"
            android:layout_centerHorizontal="true"
            />

        <RadioGroup
            android:id="@+id/fwm_radio_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fwm_settings_desc"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:maxWidth="@dimen/cypo_max_width"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/fwm_message"
            android:layout_alignStart="@+id/fwm_message"
            />

        <TextView
            android:id="@+id/fwm_empty"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fwm_radio_priority"
            />

    </RelativeLayout>
</ScrollView>