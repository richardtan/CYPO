<!-- Layout for tablets with screen size 7 inches and over -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.tckr.dukcud.view.CypoGridStaggeredView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:item_margin="8dp"
        card:column_count_portrait="2"
        card:column_count_landscape="3"
        card:grid_paddingRight="8dp"
        card:grid_paddingLeft="8dp"
        card:list_card_layout_resourceID="@layout/native_list_card_layout"
        android:id="@+id/cardGridView" />

</LinearLayout>